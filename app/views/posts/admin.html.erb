<div class="container">
  <div class="row">
    <h3 class="text-center">Admin Only</h3>
  </div>
  <div class="row">

      <table class="table table-striped">
        <thead>
          <tr>
            <th>Date Created</th>
            <th>Title</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do | post| %>
            <tr>
              <td><%= post.created_at.strftime("%b %-d, %Y") %></td>
              <td><%= post.title %></td>
              <td><%= post.description %></td>
              <td><%= link_to 'Edit', edit_post_path(post) %></td>
              <td><%= link_to 'Show', post_path(post) %></td>
              <td><%= link_to 'Delete', post_path(post), method: :delete, data: { confirm: "Are you sure?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    <div class=" float-right">
        <%= link_to 'Create a new post', new_post_path, class: "btn btn-primary btn-lg" %>
        <%= link_to 'Logout', root_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>