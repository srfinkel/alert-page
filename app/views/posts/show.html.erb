<div class="container">
  <div class="row">
    <h3 class="text-center">Current Post</h3>
  </div>
</div>
<div class="container justify-content-center">
  <div class="row panel">
    <div class="col">
      <h4>Title:</h4>
      <p><%= @post.title %></p>
      <h4>Description:</h4>
      <p><%= @post.description %></p>
    </div>
  </div>
  <div class="row">
    <div class="col-md-2">
      <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary" %>
    </div>
    <div class="col-md-8">
      [ <%= link_to 'Cancel and Return to Post Listing', posts_path %> ]
    </div>
  </div>
</div>