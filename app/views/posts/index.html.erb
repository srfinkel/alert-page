<div class="container">
  <div class="row">
    <h3 class="text-center">All current posts</h3>
  </div>
  <div class="row">
      <% @posts.each do |post| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= post.title %> <span class="label label-default"><%= post.created_at.strftime("%b %-d, %Y") %></span> <span class="label label-danger">Outage</span></h3>
        </div>
        <div class="panel-body">
          <%= post.description %>
        </div>
      </div>
      <% end %>
    <div class="pull-right">
        [ <%= link_to 'Sign in to admin', admin_path %> ] 
    </div>
  </div>
</div>