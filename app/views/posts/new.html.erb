<h1>Create a post</h1>

<% if @post.errors.any? %>
    <h2> The following errors prevented the article from saving: </h2>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<%= form_for @post do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_field :description %>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', posts_path %>